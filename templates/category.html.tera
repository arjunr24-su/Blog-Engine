<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/static/node_modules/bootstrap/dist/css/bootstrap.min.css">
    <style>
        /* Additional styles for customization */
        body {
            background-color: #f4f4f4;
            color: #333;
        }
        .navbar {
            margin-bottom: 20px;
        }
        h1 {
            color: #35424a;
        }
        .card {
            margin-bottom: 20px;
        }
        .tags .badge {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Blog</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/posts">All Posts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/category/tech">Tech</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/category/security">Security</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>Articles in Category: {{ title }}</h1>

        <!-- Category description (if available) -->
        {% if category_description %}
        <p>{{ category_description }}</p>
        {% endif %}

        <!-- Articles List -->
        <div class="row">
            {% if articles|length == 0 %}
                <div class="col-12">
                    <div class="alert alert-info">No articles found in this category.</div>
                </div>
            {% else %}
                {% for article in articles %}
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><a href="{{ article.url }}">{{ article.title }}</a></h5>
                                <p class="card-text">{{ article.excerpt }}</p>
                                {% if article.tags %}
                                    <div class="tags">
                                        {% for tag in article.tags %}
                                            <span class="badge bg-secondary">{{ tag }}</span>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                                <a href="{{ article.url }}" class="btn btn-primary">Read more</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>

        <!-- Pagination (if available) -->
        {% if pagination %}
        <nav>
            <ul class="pagination">
                {% if pagination.has_previous %}
                <li class="page-item">
                    <a class="page-link" href="{{ pagination.previous_page_url }}">Previous</a>
                </li>
                {% endif %}

                {% for page in pagination.pages %}
                <li class="page-item {% if page == pagination.current_page %}active{% endif %}">
                    <a class="page-link" href="{{ page.url }}">{{ page.number }}</a>
                </li>
                {% endfor %}

                {% if pagination.has_next %}
                <li class="page-item">
                    <a class="page-link" href="{{ pagination.next_page_url }}">Next</a>
                </li>
                {% endif %}
            </ul>
        </nav>
        {% endif %}
    </div>

    <script src="/static/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
